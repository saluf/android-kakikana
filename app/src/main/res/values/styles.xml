<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_table_header">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text_section_label">
        <item name="android:layout_marginTop">@dimen/margin_section_label_to_last_section</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="text_subsection_label" parent="text_section_label">
        <item name="android:layout_marginTop">@dimen/margin_subsection_label_to_last_subsection</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    </style>

    <style name="text_card_stat_label">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
    </style>

    <style name="text_card_stat_figure">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_quiz_card_name">
        <item name="android:gravity">center|top</item>
        <item name="android:padding">@dimen/padding_quiz_card_name</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

</resources>